//Exemplo 31: condicional simples para verificar se uma pessoa é maior de idade
programa
{
	
	funcao inicio()
	{
		inteiro idade

		escreva("Digite sua idade: ")
		leia(idade)

		se (idade >= 18) {
			escreva("Maior de idade")
		}

		se (idade < 18) {
			escreva("Menor de idade")
		}
	}
}
